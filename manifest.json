{
  "manifest_version": 3,
  "name": "Daily Bible Verse",
  "version": "1.0",
  "description": "Get a new Bible verse and an inspiring excerpt every day.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [ "storage" ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
